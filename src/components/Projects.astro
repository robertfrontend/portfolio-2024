  {
    name: "HolaGenio",
    description: " Aplicación para crear menú digitales para restaurantes.",
    date: "2025",
    img: "./work/holagenio.png",
    link: "https://holagenio.com/",
  },
  {
    name: "Boston Data",
    description: " Aplicación para crear menú digitales para restaurantes.",
    date: "2025",
    img: "",
