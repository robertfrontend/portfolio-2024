  },
  {
    name: "DiforVi",
    description: "Diforvi: Digital Tools to Empower Your Business",
    date: "2024",
    img: "./work/diforvi.png",
    link: "https://www.diforvi.com/",
  },
  {
    name: "Menu DR",
    description: " Aplicación para crear menú digitales para restaurantes.",
    date: "2021",
    img: "./work/menudr.png",
    link: "",
  },
];
const customers = [
  {
    img: "./work/1.png",
  },
  {
    img: "./work/2.png",
  },
  {
    img: "./work/3.png",
  },
  {
