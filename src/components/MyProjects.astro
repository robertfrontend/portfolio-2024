---

<section>
  <div class="py-2 text-center">
    <h4 class="text-3xl my-8 font-bold text-white/90">Personal Projects</h4>
    <div class="flex flex-col gap-6 md:gap-8 md:flex-row flex-wrap w-full">
      {
        projects.map((item) => (
          <div
            class="w-full flex flex-col gap-4 bg-white/5 border border-white/10 rounded-2xl p-6 
            hover:border-violet-500/50 hover:bg-white/10 transition-all duration-300 group
            md:flex-row md:items-center"
          >
            <div class="w-full md:w-[200px] flex-shrink-0">
              {item.img ? (
                <img
                  src={item.img || ""}
                  class="w-full h-[60px] object-contain rounded-md filter grayscale group-hover:grayscale-0 transition-all"
                  alt={item.name}
                />
              ) : (
                <div class="h-[60px] flex items-center justify-center bg-violet-500/20 rounded-md">
                   <h4 class="text-xl font-bold text-violet-300">{item.name}</h4>
                </div>
              )}
            </div>
            <div
              class="w-full flex flex-col justify-center md:items-start md:pl-6 text-left"
            >
              <h4 class="text-xl font-bold text-white group-hover:text-violet-300 transition-colors">
                {item.name}
              </h4>
              <p class="text-gray-400 mt-1 line-clamp-2">{item.description}</p>
              <div class="flex items-center justify-between w-full mt-4">
                <span class="text-xs font-medium px-2 py-1 bg-white/10 rounded-full text-gray-300">
                  {item.date}
                </span>
                <a
                  href={item.link}
                  target="_blank"
                  class="text-violet-400 hover:text-violet-300 font-medium flex items-center gap-1 transition-colors"
                >
                  Visit Project <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-external-link"><path d="M15 3h6v6"/><path d="M10 14 21 3"/><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/></svg>
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <div class="my-16">
      <a
        href="https://github.com/robertfrontend"
        target="_blank"
        class="inline-flex items-center gap-2 px-6 py-3 border border-white/20 rounded-full hover:bg-white/5 transition-all text-lg"
      >
        View More on GitHub <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
      </a>
    </div>
  </div>

  <hr class="border-white/10 mb-16" />

  <div class="py-2 text-center">
    <h4 class="text-3xl my-8 font-bold text-white/90">Customer Projects</h4>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        customers.map((item) => (
          <div class="group relative bg-white/5 border border-white/10 rounded-2xl overflow-hidden hover:border-violet-500/50 transition-all duration-300">
            <div class="aspect-video overflow-hidden">
              <img
                src={item.img}
                alt="Project image"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500 opacity-80 group-hover:opacity-100"
              />
            </div>
            <div class="p-4 flex justify-between items-center">
               <span class="text-sm text-gray-400">Production Website</span>
               <a
                href={item.link}
                target="_blank"
                class="text-violet-400 hover:text-violet-300 transition-colors"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-up-right"><path d="M7 7h10v10"/><path d="M7 17 17 7"/></svg>
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
